<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_background"
    android:paddingHorizontal="@dimen/user_recycler_item_paddingHorizontal"
    android:layout_marginBottom="@dimen/user_browse_recycler_item_marginBottom">

    <ImageView
        android:id="@+id/user_browse_item_profile_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/user_profile_photo_weight"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/user_text_weight"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/user_browse_nickName_label"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/user_browse_item_nickName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="@string/user_browse_introduction_label"/>
            <TextView
                android:id="@+id/user_browse_item_introduction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/user_browse_item_interact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/user_browse_share_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/check_user_info_text"/>
            <Button
                android:id="@+id/user_follow_state_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/follow"/>
            <Button
                android:id="@+id/user_block_state_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/block"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>