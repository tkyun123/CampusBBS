<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareSearch">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/search_select_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_search_input_height"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/share_search_input_marginTop"
            android:layout_marginLeft="@dimen/share_search_input_marginLeftAndRight"
            android:layout_marginRight="@dimen/share_search_input_marginLeftAndRight">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/share_search_input_weight"
                android:hint="@string/search_hint"
                android:background="@drawable/search_input_style"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:inputType="text"
                android:paddingLeft="@dimen/share_search_input_paddingLeft"
                android:paddingTop="@dimen/share_search_input_paddingTopAndBottom"
                android:paddingBottom="@dimen/share_search_input_paddingTopAndBottom"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/share_search_icon_weight"
                android:src="@drawable/share_search_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/black"
            android:layout_marginTop="@dimen/search_line_marginTop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_result_text"
                android:layout_marginLeft="@dimen/search_text_marginLeft"/>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/search_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>