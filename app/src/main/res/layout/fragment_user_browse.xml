<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserBrowse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_browse_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/user_browse_recycler_marginLeftAndRight"
            android:layout_marginRight="@dimen/user_browse_recycler_marginLeftAndRight"
            android:layout_marginTop="@dimen/user_browse_recycler_marginTop"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/user_loading_icon"
        android:layout_width="@dimen/loading_iconSize"
        android:layout_height="@dimen/loading_iconSize"
        android:src="@drawable/loading_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/loading_icon_marginTop"
        android:visibility="invisible"/>
</FrameLayout>